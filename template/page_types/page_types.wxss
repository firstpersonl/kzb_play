.recommend_scroll_x_box {
  height: 200rpx;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: calc(100vw / 3);
  height: 200rpx;
  display: inline-block;
  box-sizing: border-box;
  border: 3px solid #fff;
  position: relative;
}
.recommend_hot_image {
  width: 100%;
  height: 100%;
}
.recommend_hot_box--active{
  border: 3px solid yellow;
  z-index: 999;
}
.typs_cover_text{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
}
.typs_cover_text text{
  display: block;
  text-align: center;
  color: #fff; 
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}
.recommend_hot_box--active >.typs_cover_text text {
  color: yellow;
}
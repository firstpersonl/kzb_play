/* pages/search/search.wxss */
.wrap{
  background-color: #000;
  min-height: 100vh;
  position: relative
}

.fixed-top{
  position: sticky;
  top:20rpx;
  
}
.serach-input{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 15rpx;
}
.partylist{
  margin-top: 20rpx;
}
.play_list {
  position: relative;
  margin-top: 40rpx;
}
.play_list navigator {
  width: 100%;
  height: 100%;
  padding-bottom: 10rpx;
}
.play{
  width: 98%;
  margin: 0 auto;
  
  background: #000;
  position: relative;
}
.img_cover {
  position: absolute;
  top: 0;
  padding: 10px;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  box-sizing: border-box;
}
.cover_desc{
  display: flex;
}
.cover_desc .play_title{
  width: 65%;
  color: #fff;
  padding: 0 10px;
}
.cover_desc .play_price{
  border-right: 2px solid #f5f5f5;
  color: #FFF200;
  font-weight: bold;
  padding: 0 5px;
  font-size: 45rpx;
  width: 20%;
}
.cover_desc .play_favoter{
  font-weight: bold;
  color: #fff;
  width: 15%;
  text-align: center;
  z-index: 9999;
}
.category_desc{
  font-size: 35rpx;
  padding: 15rpx;
}
.h2{
  font-weight: bold;
}
.category_n_t{
  font-size: 25rpx;
  color: #8a8a8a;
}
.play_list navigator :last-child .play{
  box-shadow: none;
  margin-bottom: 0;
}
.play_img{
  width: 100%;
}
.isEmpty{
  color: #fff;
  text-align: center;
  padding: 20rpx;
}
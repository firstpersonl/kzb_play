@import "../../template/page_types/page_types.wxss";
.img {
  height: 450rpx;
}
.list_wrap_{
  background: rgba(0, 0, 0, 1); 
  min-height: 100vh;
}
.list_wrap{
  min-height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}
.play{
  width: 100%;
  margin: 0 auto;
  
  background: #000;
  position: relative;
}
.play_list{
   /* transform:translateX(-1000px);  */
}
.play_list navigator {
  width: 100%;
  height: 100%;
  padding-bottom: 10rpx;
}
.img_cover {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  box-sizing: border-box;
}
.cover_desc{
  display: flex;
  padding: 10px;
  background: -webkit-linear-gradient(bottom,rgba(85,85,85, 0) 0%, rgba(0, 0, 0, .8) 100%);
}
.cover_desc .play_title{
  color: #fff;
  padding: 0 0 0 10px;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.cover_desc .play_price{
  border-right: 2px solid #f5f5f5;
  color: #FFF200;
  font-weight: bold;
  padding: 0 5px;
  font-size: 45rpx;
  width: 20%;
  display: flex;
  align-items: center;
}
.cover_desc .play_favoter{
  font-weight: bold;
  color: #fff;
  width: 15%;
  text-align: center;
  z-index: 9999;
}
.category_desc{
  font-size: 35rpx;
  padding: 15rpx;
}
.h2{
  font-weight: bold;
}
.category_n_t{
  font-size: 25rpx;
  color: #8a8a8a;
}
.play_list navigator :last-child .play{
  box-shadow: none;
  margin-bottom: 0;
}
.empty{
  text-align: center;
  color: #fff;
  padding: 15px;
  font-size: 30rpx;
}